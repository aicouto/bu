{
  "name": "bukinoshita",
  "version": "0.6.0",
  "description": "full-time open sourcerer and nomad",
  "repository": {
    "url": "https://github.com/bukinoshita/bu",
    "type": "git"
  },
  "author": "Bu Kinoshita <bukinoshita@gmail.com>",
  "license": "MIT",
  "keywords": [
    "bu",
    "kinoshita",
    "bukinoshita",
    "personal",
    "website",
    "portfolio",
    "front",
    "programming",
    "design",
    "ux",
    "user",
    "experience",
    "javascript",
    "js",
    "node",
    "nodejs"
  ],
  "scripts": {
    "dev": "next",
    "build": "next build",
    "start": "next start",
    "test": "xo",
    "precommit": "lint-staged"
  },
  "dependencies": {
    "babel-plugin-inline-dotenv": "^1.1.1",
    "babel-plugin-transform-inline-environment-variables": "^0.2.0",
    "copy-text-to-clipboard": "^1.0.3",
    "git-url-prettify": "^0.0.2",
    "goot": "^1.0.0",
    "is-github-repo": "^0.0.2",
    "isomorphic-fetch": "^2.2.1",
    "next": "^3.0.6",
    "npmstat": "^1.0.1",
    "nprogress": "^0.2.0",
    "react": "^15.6.1",
    "react-dom": "^15.6.1",
    "spacetime": "^1.3.1",
    "to-id": "^1.0.5"
  },
  "devDependencies": {
    "eslint-config-prettier": "^2.3.0",
    "eslint-plugin-react": "^7.2.1",
    "husky": "^0.14.3",
    "lint-staged": "^4.0.3",
    "prettier": "^1.5.3",
    "xo": "^0.18.2"
  },
  "xo": {
    "extends": [
      "prettier",
      "prettier/react",
      "plugin:react/recommended"
    ],
    "env": [
      "browser",
      "node"
    ],
    "rules": {
      "react/display-name": 0,
      "react/react-in-jsx-scope": 0,
      "import/named": 0,
      "import/no-extraneous-dependencies": 0,
      "react/prop-types": 0,
      "import/no-unassigned-import": 0,
      "camelcase": 0,
      "react/no-unescaped-entities": 0,
      "new-cap": 0,
      "array-callback-return": 0
    }
  },
  "lint-staged": {
    "*.js": [
      "npm run test",
      "prettier --semi false --single-quote --write",
      "git add"
    ]
  },
  "now": {
    "alias": "bukinoshita.io",
    "env": {
      "NODE_ENV": "production"
    },
    "dotenv": ".env"
  }
}
